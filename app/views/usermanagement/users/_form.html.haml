= form_for @user_profile, url: {action: "update"}, method: :put do |f|
  %div{:clas => "row"}
    .col-md-12
      .col-md-1
      .col-md-11
        = f.submit t('general_buttons.save_btn'), class: "btn btn-default btn-sm"
        = link_to t('general_buttons.cancel_btn'), "/usermanagement/users/", class: "btn btn-default btn-sm"
  %br
    %br
      .row
        .col-md-12
          .col-md-1
          .col-md-11
            .col-md-3= label_tag(:login, t('user_management.user_name_lbl'))
            .col-md-9= @user_profile.login
      %br
        %br
          .row
            .col-md-12
              .col-md-1
              .col-md-11
                .col-md-3= label_tag(:firstname, t('user_management.first_name_lbl'))
                .col-md-9= @user_profile.firstname
          %br
            %br
              .row
                .col-md-12
                  .col-md-1
                  .col-md-11
                    .col-md-3= label_tag(:lastname, t('user_management.last_name_lbl'))
                    .col-md-9= @user_profile.lastname
              %br
                %br
                  .row
                    .col-md-12
                      .col-md-1
                      .col-md-11
                        .col-md-3= label_tag(:email, t('user_management.email_lbl'))
                        .col-md-9= @user_profile.email
                  %br
                    %br
                      .row
                        .col-md-12
                          .col-md-1
                          .col-md-11
                            .col-md-3= label_tag(:mobile, t('user_management.mobile_lbl'))
                            .col-md-9= @user_profile.mobile
                      %br
                        %br
                          .row
                            .col-md-12
                              .col-md-1
                              .col-md-11
                                .col-md-3= label_tag(:language, t('general_languages.language_label'))
                                .col-md-9
                                  = @user_profile.language
                          %br
                            %br
                              .row
                                .col-md-12
                                  .col-md-1
                                  .col-md-11
                                    .col-md-3= label_tag(:password, t('user_management.edit_new_pass'))
                                    .col-md-9= f.password_field :password
                              %br
                                %br
                                  .row
                                    .col-md-12
                                      .col-md-1
                                      .col-md-11
                                        .col-md-3= label_tag(:password_confirm, t('user_management.edit_confirm_pass'))
                                        .col-md-9= f.password_field :password_confirm
                                  %br
                                    %br
                                      .row
                                        .col-md-12
                                          .col-md-1
                                          .col-md-11
                                            - @user_profile.groups.each do |group_name|
                                              - user_groups=group_name.split("|")
                                              - if user_groups[3].eql?'true'
                                                - def_checked=true
                                              - else
                                                - def_checked=false
                                              = check_box("groups", "enabled", {:multiple => true, :checked => def_checked}, user_groups[2], nil)
                                              = label_tag(:groups, user_groups[1])