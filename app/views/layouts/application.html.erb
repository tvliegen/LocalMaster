            <% if account_number.match(/#{session[:DealerCode]}/) !=nil %>
            
            <i class="glyphicon glyphicon glyphicon-ok icon-action" > </i>
            <% end %>
          <%= account_number.split('|')[0] + ' ('+account_number.split('|')[1] +')' %>
          </a></li>
          <% end %>
       <li class="divider"></li>
       <li class="dropdown-header">Settings</li>
          <li><a href="/teknionline/profiles/edit">Account Settings</a></li> 
            <li class="divider"></li>
            <li><a href="/login/authenticates/logout">Log Out</a></li>
       
        
          </ul>
        </li>
     
   <% end %>
   <% @mygroups=Array.new %>
   <% @mygroups=session[:Groups] %>
   <% if @mygroups !=nil %>
   <% if !@mygroups.grep(/admin/).empty? %>
   
