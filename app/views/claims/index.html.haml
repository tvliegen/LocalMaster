.col-sm-10.col-sm-offset-2.main
  %h2.page-header=t('claims')
  .navbar-collapse.collapse
    %ul.nav.nav-pills
      %li{class: ('active' if params[:status].nil?)}
        = link_to "All Claims", claims_path
      %li{class: ('active' if params[:status] == 'in_progress')}
        = link_to "In Progress", claims_path(status: 'in_progress')
      %li{class: ('active' if params[:status] == 'clarification')}
        = link_to "Clarification", claims_path(status: 'clarification')
      %li{class: ('active' if params[:status] == 'resolved')}
        = link_to "Resolved", claims_path(status: 'resolved')
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Tekcare Number
        %th Title
        %th Project
        %th Created By
        %th Last Modified
        %th Status
    %tbody.rowlink{"data-link" => "row"}
      - @claims.each do |claim|
        %tr
          %td
            %a{href: true}
              = claim.tekcare_number
          %td= claim.title
          %td= claim.project
          %td= claim.created_by
          %td= claim.updated_at
          %td= claim.status
