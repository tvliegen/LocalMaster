= render 'shared/sidebar'

.col-sm-10.main
  %h2.page-header=t('claims')
  .navbar-collapse.collapse
    %ul.nav.nav-pills
      %li{class: ('active' if params[:status].nil?)}
        = link_to t('claims_all_claims'), claims_path
      %li{class: ('active' if params[:status] == 'in_progress')}
        = link_to t('claims_in_progress'), claims_path(status: 'in_progress')
      %li{class: ('active' if params[:status] == 'clarification')}
        = link_to t('claims_clarification'), claims_path(status: 'clarification')
      %li{class: ('active' if params[:status] == 'resolved')}
        = link_to t('claims_resolved'), claims_path(status: 'resolved')
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th= t('claims_tekcare_number')
        %th= t('claims_title')
        %th= t('claims_project')
        %th= t('claims_created_by')
        %th= t('claims_last_modified')
        %th= t('claims_status')
        %th= t('claims_actions')
    %tbody.rowlink{"data-link" => "row"}
      - @claims.each do |claim|
        %tr
          %td
            = link_to claim.tekcare_number, claim_path(claim)
          %td= claim.claim_title
          %td= claim.project_name
          %td= claim.dealer_name
          %td= claim.updated_at
          %td= claim.status
          %td= button_to t('claims_cancel'), cancel_claim_path(claim), method: :delete
