#claim_content
 
  .col-md-12
    .btn-group
      %button#new_clarification.btn.btn-default New
  .col-md-12
    .table-responsive
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th
              Date
            %th
              Subject
            %th
              From
            %th
              Status
        %tbody.rowlink
          - @claim_issue.clarifications.each do |clarification|
            %tr
              %td
                %a{href: 'javascript:;', id: "clarification_modal_#{clarification.clarification_id}"}
                  = clarification.timestamp.strftime("%F %T")
              %td
                = clarification.subject
              %td
                = clarification.sent_by
              %td
                = clarification.status

            %div.jqmWindow{id: "clarification_modal_#{clarification.clarification_id}"}
              Please wait...

            :javascript
              $(function() {
                $('#clarification_modal_#{clarification.clarification_id}').jqm({
                  ajax: "/clarifications/#{clarification.clarification_id}/edit?claim_issue_id=#{clarification.issue_id}",
                  trigger: 'a#clarification_modal_#{clarification.clarification_id}'
                });
              });




