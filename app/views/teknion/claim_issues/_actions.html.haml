#claim_content
  .col-md-12
    %button.btn.btn-default Show Replacement Order
    %button.btn Launch Chargeable Order

  .col-md-12
    %h5 Action plan summary
    %p
      = @claim_issue.action_plan.text

  .col-md-12
    %h5 Replacement Product Information
    .table-responsive
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th
              Item Code
            %th
              CR Number
            %th
              Item Desc
            %th
              Status
        %tbody.rowlink
          - @claim_issue.action_plan.replacement_orders.each do |replacement_order|
            %tr
              %td
                = replacement_order.product_code
              %td
                = replacement_order.cr
              %td
                = replacement_order.product_desc
              %td
                = replacement_order.status



