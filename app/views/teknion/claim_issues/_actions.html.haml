#claim_content
  .col-md-12
    - if @claim_issue.comment.nil?
      No Action Taken
    - else
      %button.btn.btn-default Show Replacement Order      
      %button.btn Launch Chargeable Order

      .col-md-12
        %label Action plan summary
        %p
          = @claim_issue.comment

      
      .col-md-12
        %label Replacement Product Information
        .table-responsive
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th
                  Item Code
                %th
                  CR Number
                %th
                  Item Desc
                %th
                  Status
            %tbody.rowlink
              - @claim_issue.replaced_products.each do |replaced_product|
                %tr
                  %td
                    = replaced_product.product_code
                  %td
                    = replaced_product.cr_number
                  %td
                    %div{style: 'color:red'}MISSING_IN_API
                    -#= replaced_product.product_desc
                  %td
                    %div{style: 'color:red'}MISSING_IN_API
                    -#= replaced_product.status
