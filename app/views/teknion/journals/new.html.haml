#journal_new_wrapper

  %h5.modal-header New Journal
  = form_for @journal, url: teknion_claim_issue_journals_path(@journal.claim_issue_id), html: { class: 'form-horizontal', id: 'whatever' } do |f|

    - if @journal.errors.any?
      #error_explanation
        %h2
          = pluralize(@journal.errors.count, "error")
          prohibited this journal from being saved:
        %ul
          - @journal.errors.full_messages.each do |message|
            %li= message

    %p.mod-author
      = f.label :author
      = f.text_field :author
    %p.mod-title
      = f.label :title
      = f.text_field :title
    %p.mod-information
      = f.label :information
      = f.text_area :information, placeholder: 'Type your information here'

    = f.fields_for :journal_attachments do |journal_attachment_form|
      = journal_attachment_form.file_field :attachment

    .form-actions
      = f.button :submit, class: [:btn, 'btn-primary']

  :javascript
    $("form", "#journal_new_wrapper").ajaxForm({
      target: "#journal_new_wrapper",
      replaceTarget: true
    });



