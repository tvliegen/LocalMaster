    .claim-filters.btn-group.btn-group-xs
      %button.btn.btn-default.in-progress{class: ('active' if params[:status] == 'OPEN')}
        = link_to "In Progress", teknion_claims_path
      %button.btn.btn-default.clairfication{class: ('active' if params[:status] == 'COMM-QUE')}
        = link_to "Clairfication", teknion_claims_path(status: 'COMM-QUE')
      %button.btn.btn-default.resolved{class: ('active' if params[:status] == 'resolved')}
        = link_to "Resolved  40", teknion_claims_path(status: 'resolved')
      %button.btn.btn-default.closed{class: ('active' if params[:status] == 'closed')}
        = link_to "Closed  100", teknion_claims_path(status: 'closed')
.container-fluid.claims-list
  .col-sm-12.main
    %h2.page-header.claim-status=t('claims')
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th Issue Number
          %th Title
          %th Project
          %th Created By
          %th Last Modified
          %th Status
          %th Actions
      %tbody.rowlink{"data-link" => "row"}
